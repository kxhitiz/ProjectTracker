<!DOCTYPE html>
<html>
<head>
  <title>ProjectTracker</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag 'jquery', 'jquery-ui', 'rails', 'application' %>
  <%= csrf_meta_tag %>
</head>
<body>
<div id="head">
  <div id="head_cen">
    <div id="head_sup" class="head_pad">
      <p class="search">
        <label>SEARCH</label>
        <input name="search" type="text" class="txt" />
        <input name="search-btn" type="submit" class="btn" value="SEARCH" />
      </p>
      <h1 class="logo"><a href="#">PTracker</a></h1>
      <ul>
        <li><%= link_to "Home", projects_path %> </li>
        <li><a href="">ABOUT</a></li>
        <li>
            <% if person_signed_in? %>
                <%= link_to "LogOut", destroy_person_session_path %>
            <% else %>
                <%= link_to "LogIn", new_person_session_path %>
            <% end %>
        </li>

      </ul>
    </div>
  </div>
</div>
<div id="content">
  <div id="content_cen">
    <div id="content_sup" class="head_pad">
      <div id="welcom_pan">

        <h2><span>Welcome</span>to ProjectTracker</h2>
      </div> <br />
      <div id="content">
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
        <%= yield %>
      </div>

    </div>
  </div>
</div>
<div id="foot">
  <div id="foot_cen">

    <p>&copy; Copyright Sprout Technology Services</p>
  </div>
</div>
</body>
</html>

