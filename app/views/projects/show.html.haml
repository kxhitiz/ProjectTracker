%h2
  = "#{@project.title}"
  = pluralize("#{@project.points}","point")
%br
= "#{@project.description}"
%br
%br
#stories_header
  %span Stories
  %span#addStory
    - if is_owner(@project)
      = link_to "+Add Story", new_project_story_path(@project)
#stories_list
  .stories_list
    - if @stories.each.count < 1
      %em
        = "No Stories Yet!"

    - @stories.each do |story|
      %br
      = link_to "#{story.title}", project_story_path(@project, story)
      %br
      = "Description: #{story.description}"
      %br
      = "Owner: #{@owner.name}"
      %br
      = pluralize(story.weight, "point")
      %br
      = calculate_status(@project)
      %hr
#people_project
  = render "shared/connected_people"

