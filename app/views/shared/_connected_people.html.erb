<u>People in this Project</u> <br />
<% @connected_people = connected_people(@collaborators) %>
<% @connected_people.each do |person| %>
    <%= person.name %>
    <% if person.id != @project.person_id %>
      <% if is_owner(@project) %>
        <%= link_to "Remove", project_removeCollaborator_path(@project.id, :person_id => person.id) %>
      <% end %>
    <% end %>
    <br />
<% end %>

<% if is_owner(@project) %>
  <%= form_tag (project_addCollaborator_path(@project)) do %>
    <%= select_tag "people", options_from_collection_for_select(@all_people, "id", "name") %>
    <%= submit_tag "Add Now" %>
  <% end %>
<% end %>

