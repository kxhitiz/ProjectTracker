<% form_tag (project_story_change_status_path(@project,@story)) do %>
  <% if is_owner(@project) %>
    <%= select_tag "status", options_for_select([ ["Requested"],["Accepted"],["Rejected"] ]) %>
  <% elsif is_authorized(@story) %>
    <%= select_tag "status", options_for_select([ ["Working"],["Finished"] ]) %>
  <% end %>
  <%= submit_tag "Change Status" %>
<% end %>

